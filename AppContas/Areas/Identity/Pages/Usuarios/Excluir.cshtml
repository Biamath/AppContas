@page"{id:int}"
@model AppContas.Areas.Identity.Pages.Usuarios.DeletarModel
@{
        ViewData["Title"] = "Excluir Usuário";
}


<h2>Excluir Usuário</h2>

<h3>Tem certeza de que deseja excluir este usuário?</h3>
<div>
    <h4>@Model.Usuario.Nome</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">E-mail</dt>
        <dd class="col-sm-10">@Model.Usuario.Email</dd>

        <dt class="col-sm-2">Data de Nascimento</dt>
        <dd class="col-sm-10">@Model.Usuario.DataNascimento.ToString("dd/MM/yyyy")</dd>
    </dl>
</div>

<form method="post">
    <input type="hidden" asp-for="Usuario.Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a class="btn btn-secondary" asp-page="/Usuarios/Index">Voltar</a>
</form>
